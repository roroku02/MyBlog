<h2>
    My Posts
    <%= link_to 'Add New', new_post_path, class: "add" %>
</h2>

<ul>
    <% @posts.each do |post| %>
        <li>
            <%= link_to post.title, post_path(post) %>
            <%= link_to '[Edit]', edit_post_path(post), class: 'command' %>
            <%= link_to '[Delete]', post_path(post), method: :delete, class: 'command', data: { confirm: 'Are you sure?' } %>
        </li>
    <% end %>
</ul>